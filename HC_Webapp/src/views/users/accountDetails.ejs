<!DOCTYPE html>
<html lang="en">
  <%- include ('../partials/head') %>
  <link rel="stylesheet" type="text/css" href="/css/accountDetails.css" />
  <link
    rel="stylesheet"
    type="text/css"
    href="/css/accountDetails-tablet.css"
  />
  <link
    rel="stylesheet"
    type="text/css"
    href="/css/accountDetails-desktop.css"
  />
  <script src="/scripts.js"></script>
  <body>
    <div class="errores">
      <ul></ul>
    </div>
    <%- include ('../partials/header') %>
    <main>
      <div class="container">
        <div class="box">
          <div class="title">
            <h1>Detalles de cuenta</h1>
          </div>
          <div class="half1">
            <div class="image">
              <img
                class="preview"
                src="/assets/avatars/<%= userLoggedIn.avatar %>"
              />
            </div>
          </div>
          <div class="half2">
            <form
              class="fields"
              method="POST"
              action="/user/update?_method=POST"
              enctype="multipart/form-data"
            >
              <div class="id">
                <input
                  class="input-field"
                  type="hidden"
                  name="id"
                  value="<%= userLoggedIn.id %>"
                  readonly="readonly"
                />
              </div>
              <div class="firstName">
                <label for="user">Nombre:</label>
                <input
                  class="input-field"
                  type="text"
                  name="firstName"
                  value="<%= userLoggedIn.firstName %>"
                />
                <i class="fa-solid fa-id-card"></i>
              </div>
              <div class="errors">
                <% if (errors.firstName) { %>
                <p class="msg-error"><%= locals.errors.firstName.msg %></p>
                <% } %>
              </div>
              <div class="lastName">
                <label for="user">Apellido:</label>
                <input
                  class="input-field"
                  type="text"
                  name="lastName"
                  value="<%= userLoggedIn.lastName %>"
                />
                <i class="fa-solid fa-id-card"></i>
              </div>
              <div class="errors">
                <% if (errors.lastName) { %>
                <p class="msg-error"><%= locals.errors.lastName.msg %></p>
                <% } %>
              </div>
              <div class="userName">
                <label for="user">Nombre de usuario:</label>
                <input
                  class="input-field"
                  type="text"
                  name="userName"
                  value="<%= userLoggedIn.userName %>"
                />
                <i class="fa-solid fa-user"></i>
              </div>
              <div class="errors">
                <% if (errors.userName) { %>
                <p class="msg-error"><%= locals.errors.userName.msg %></p>
                <% } %>
              </div>
              <div class="email">
                <label for="email">E-mail:</label>
                <input
                  class="input-field"
                  type="email"
                  name="email"
                  value="<%= userLoggedIn.email %>"
                />
                <i class="fa-solid fa-at"></i>
              </div>
              <div class="errors">
                <% if (errors.email) { %>
                <p class="msg-error"><%= locals.errors.email.msg %></p>
                <% } %>
              </div>
              <div class="passwd">
                <label for="password">Contraseña:</label>
                <input
                  class="input-field"
                  type="password"
                  name="passwd"
                  placeholder="******"
                  value=""
                />
                <i class="fa-solid fa-key"></i>
              </div>
              <div class="errors">
                <% if (errors.passwd) { %>
                <p class="msg-error"><%= locals.errors.passwd.msg %></p>
                <% } %>
              </div>
              <div class="image-fields-container">
                <label for="image">Actualizar foto de perfil:</label>
                <input
                  class="image-upload"
                  type="file"
                  name="avatar"
                  id="image"
                  autocomplete="off"
                  onchange="loadFile(event)"
                />
              </div>
              <div class="errors">
                <% if (errors.avatar) { %>
                <p class="msg-error"><%= locals.errors.avatar.msg %></p>
                <% } %>
              </div>
              <div class="buttons">
                <div class="submit-container">
                  <input
                    class="submit"
                    type="submit"
                    value="Actualizar datos"
                  />
                </div>
                <div class="btn-close-container">
                  <a class="btn-close" href="/user/close">Cerrar sesión</a>
                </div>
                <div class="btn-back-container">
                  <a class="btn-back" href="/">Volver</a>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </main>
  </body>
  <%- include ('../partials/footer') %>
</html>
