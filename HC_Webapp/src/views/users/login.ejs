<!DOCTYPE html>
<html lang="en">
  <%- include ('../partials/head') %>
  <link rel="stylesheet" type="text/css" href="/css/login.css" />
  <link rel="stylesheet" type="text/css" href="/css/login-tablet.css" />
  <link rel="stylesheet" type="text/css" href="/css/login-desktop.css" />
  <body>
    <div class="container">
      <%- include ('../partials/header') %>
      <main>
        <div class="banner">
          <img src="/images/banner.jpg" />
        </div>
        <form action="userLogin?_method=POST" method="POST">
          <div class="user">
            <label for="user">Nombre de usuario</label>
            <input
              class="input-fields"
              type="text"
              name="user_name"
              autocomplete="off"
              placeholder="Username"
              value="<%= locals.oldData ? oldData.username : null %>"
            />
            <% if (locals.errors && errors.username) { %>
            <p class="msg-error"><%= errors.username.msg %></p>
            <% } %>
          </div>
          <div class="passwords">
            <label for="password">Ingresar contrase√±a</label>
            <input
              class="input-fields"
              type="password"
              name="passwd"
              autocomplete="off"
              placeholder="Password"
              value="<%= locals.oldData ? oldData.password : null %>"
            />
            <% if (locals.errors && errors.password) { %>
            <p class="msg-error"><%= errors.password.msg %></p>
            <% } %>
          </div>
          <div class="buttons">
            <button type="submit" value="enviar">Enviar</button>
            <div class="show-btn-back">
              <a class="nav-back" href="home">Volver</a>
            </div>
          </div>
        </form>
      </main>
    </div>
    <%- include ('../partials/footer') %>
  </body>
</html>
