<!DOCTYPE html>
<html lang="en">
  <%- include ('../partials/head') %>
  <link rel="stylesheet" type="text/css" href="/css/cart.css" />
  <link rel="stylesheet" type="text/css" href="/css/cart-tablet.css" />
  <link
    rel="stylesheet"
    type="text/css"
    href="/css/cart-desktop.css"
  />
  <body>
      <div id="container">
      <%- include ('../partials/header') %>
      <main class="mainCart">
        <section class="banner">
          <img src="/images/Banner.jpg" />
        </section>

        <h2 class="tituloCart">
          <i class="fa-solid fa-basket-shopping"></i> Tus Compras
        </h2>
        <div class="cart">
          <section class="firstSectionCart">
      <% for (let i= 1; i< productList.length; i++ ){ %> <% if(productList[i].name != 'DELETED')
      {%>
        <article>
              <img
                class="imagenesCart"
                src="/images/<% productList[i].image%>"
              />
              <div class="contenidoProduct">
                <h4 class="tituloProducto"><% productList[i].name %></h4>
                <p class="breveDescripcion">
                  <% productList[i].descs %>
                </p>
                <div class="padreDiv">
                  <section class="precioArtCart"><% productList[i].price %></section>
                  
                  <section class="botonera">
                      <a href="/">
                      <button class="btnsCart">
                        <form
              class="fields"
              method="POST"
              action="/viewProduct/eliminar?_method=DELETE"
            >
              <a
                class="fa-solid fa-plus"
                href="producto/<%= productList[i].id%>/eliminarCart"
                >eliminar</a>
            </form></button>
                        </a>
                    <a href="/">
                      <button class="btnsCart">
                        <i class="fa-solid fa-plus"></i></button>
                    </a>
                    <a href="/">
                      <button class="btnsCart">
                        <i class="fa-solid fa-minus"></i></butto>
                    </a>
                    <p class="ctdCart">1</p>
                  </section>
                </div>
              </div>
            </article>
          </section>
          <section class="secondSectionCart">
            <article>
              <% } %> <%} %> 
           
              <h4>
                <i class="fa-solid fa-file-invoice-dollar"></i> Detalle de
                Compra
              </h4>
              <div class="detalleCompra">
                <div class="detalleColumna1">
                  <p>CTD Items</p>
                  <p>SubTotal</p>
                  <p>Descuento</p>
                  <p>Envío</p>

                  <h3>Total</h3>
                </div>
                <div class="detalleColumna2">
                  <p>4</p>
                  <p>$ Subtotal</p>
                  <p>10%</p>
                  <p>$ Envío</p>

                  <h3>$ Total compra</h3>
                </div>
              </div>
            </article>
            <article class="botonesFinales">
              <a href="/"><button class="btnCancel">Cancelar Compra</button></a>
              <a href="/"
                ><button class="btnFinish">Finalizar Compra</button></a>
            </article>
          </section>
        </div>
      </main>
    </div>
    <%- include ('../partials/footer') %>
  </body>
</html>
