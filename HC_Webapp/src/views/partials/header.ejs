<header>
  <div class="header-container">
    <div class="logo">
      <img class="logo-image" src="/logo/hc.png" />
      <h3 class="logo-text">HandiCraft</h3>
    </div>
    <nav class="nav-site-container">
      <a class="nav-button" href="/">Home</a>
      <a class="nav-button" href="/enConstruccion">Colecciones</a>
      <a class="nav-button" href="/enConstruccion">Noticias</a>
    </nav>
    <div class="nav-search">
      <form class="search-form" action="/buscar" method="GET">
        <input
          class="search-bar"
          type="text"
          name="buscar"
          placeholder="Buscar productos, marcas..."
        />
        <input class="search-bar-submit" type="submit" value="&#128269" />
      </form>
     <!--  <i class="fa-solid fa-magnifying-glass"></i> -->
    </div>
    <div class="nav-user-container">
      <nav class="nav-user">
        <% if(!userLoggedIn){ %>
        <div>
          <a href="/user/viewRegister">Registrarme</a>
        </div>
        <div>
          <a href="/user/viewLogin">Cuenta</a>
        </div>

        <% } else{ %>

        <div>
          <a class="profile-name" href="/user/profile"><%= userLoggedIn.userName %></a> 
        </div>

        <% } %>

        <div>
          <a href="/cart">Carrito</a>
        </div>
      </nav>
      <nav class="nav-menu">
        <i class="fas fa-bars"></i>
      </nav>
    </div>
  </div>
</header>
